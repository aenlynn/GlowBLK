<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA9290">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/arrowback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About the Developers"
            android:layout_marginTop="15dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Vision"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To create innovative and user-friendly applications that make a positive impact to the community."
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/drawablee"
            android:padding="12dp">

            <ImageView
                android:id="@+id/developer1Image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/charles" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/developer1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charles Sean"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/developer1Bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passionate Android developer with a focus on UI/UX."
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/developer1Skills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills: Kotlin, Java, Jetpack Compose"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/developer1FunFact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Fact: I love hiking and playing guitar."
                    android:textColor="#666" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/drawablee"
            android:padding="12dp">

            <ImageView
                android:id="@+id/developer3Image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/analynn" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/developer3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analyn"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/developer3Bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dedicated to my work to create good community in the industry."
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/developer3Skills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills: Kotlin, Java, Python"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/developer3FunFact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Fact: I like reading books and singing."
                    android:textColor="#666" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/drawablee"
            android:padding="12dp">

            <ImageView
                android:id="@+id/developer2Image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/elai"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/developer2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elaiza Jane"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/developer2Bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experienced in backend development and cloud technologies."
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/developer2Skills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skills: Python, AWS, SQL"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/developer2FunFact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun Fact: I'm a certified scuba diver."
                    android:textColor="#666" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
